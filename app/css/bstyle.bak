/* Style For Layout */

.ts-parent-grid-container {
  width: 100%;
  height: 100%;
}

.ts-child-grid-container {
  width: 100%;
  height: 90vh;
  display: grid;
  grid-template-columns: 300px auto;
  grid-gap: 10px;
  background-color: #2196f3;
  padding: 10px;
}

.ts-child-grid-container > div {
  background-color: honeydew;
}

/* Style For Editor */
label {
  display: block !important;
  margin-top: 20px;
}

/* Style For Body */
.ts-template {
  height: 100%;
  width: 100%;
  margin: auto;
  padding: 10px !important;
}

.ts-template-child{
  background-image: url("../templates/container-720x480.png");
  background-repeat: no-repeat;
  background-position: center center;
  height: 480px;
  width: 720px;
  margin: auto;
}

/* Style For Content */
.ddable {
  position: absolute;
  cursor: -webkit-grab;
  cursor: grab;
}




/* Style tab links */
.tablink {
  background-color: #555;
  color: white;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  font-size: 17px;
  width: 33.33%;
}

.tablink:hover {
  background-color: #777;
}

/* Style the tab content (and add height:100% for full page content) */
.tabcontent {
  color: white;
  display: none;
  padding: 65px 10px 0 10px;
  height: 100%;
}

#ts-cmpnts {background-color: yellowgreen;}
#ts-styles {background-color: lightgreen;}
#ts-advance {background-color: lightblue;}


/* selected !selected */
.is-selected{
  border: 1px solid red;
  opacity: 80%;
}







